<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#ededed"
    android:id="@+id/messgae_single_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="51dp"
        android:id="@+id/msg_profile_layout"
        android:layout_height="51dp"
        android:src="@drawable/anni" />

    <TextView
        android:id="@+id/msg_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/msg_text_background"
        android:padding="10dp"
        android:text="hello"
        android:textColor="#fff"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/message_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/msg_text_layout"
        android:layout_below="@+id/msg_text_layout"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@+id/msg_profile_layout"
        android:padding="0dp"
        android:scaleType="centerCrop" />
</RelativeLayout>